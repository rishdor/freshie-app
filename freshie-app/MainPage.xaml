<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:freshie_app"
             x:Class="freshie_app.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Label Text="Witaj!" FontSize="45"
                VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"  />

        <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Grid.Row="1">
            <Entry x:Name="LoginEntry" Placeholder="Login" />
            <Entry x:Name="PasswordEntry" Placeholder="Hasło" IsPassword="True" />
            <Button Text="Zaloguj się" Clicked="OnLoginButtonClicked" />

        </StackLayout>
    </Grid>
</ContentPage>
