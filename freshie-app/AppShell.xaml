<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="freshie_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:freshie_app"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True">

    <TabBar>

        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"/>
        <ShellContent
            ContentTemplate="{DataTemplate local:RecipiesPage}"
            Title="Recipies"
            Route="RecipiesPage" 
            Icon="plate.png"/>

        <ShellContent
            ContentTemplate="{DataTemplate local:HomePage}"
            Title="Home"
            Route="HomePage" 
            Icon="home.png"/>

        <ShellContent
            ContentTemplate="{DataTemplate local:GroceriesPage}"
            Title="Groceries"
            Route="GroceriesPage" 
            Icon="list.png"/>

    </TabBar>


</Shell>
