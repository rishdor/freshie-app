<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="freshie_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:freshie_app"
    Shell.FlyoutBehavior="Disabled">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*"
              RowDefinitions="*">
            <Label Grid.Row="0" Text="{Binding Path=CurrentPage.Title, Mode=OneWay}" HorizontalOptions="CenterAndExpand" />
            <ImageButton BackgroundColor="Transparent" Source="settings.png" HeightRequest="40" WidthRequest="40" HorizontalOptions="End" />
        </Grid>
    </Shell.TitleView>

</Shell>
