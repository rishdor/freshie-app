<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="freshie_app.GroceriesPage"
             Title="GroceriesPage">
    <ScrollView>
        <StackLayout>
            <Label x:Name="WelcomeLabel" 
                TextColor="#F7F2E7"
                HorizontalTextAlignment = "Center"
                VerticalTextAlignment = "Center"
                FontSize="11"/>
            <CollectionView x:Name="ProductsCollectionView" ItemsLayout="VerticalGrid, 3">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Spacing="2">
                            <Button Text="{Binding ProductName}" Clicked="OnAddToGroceriesButtonClicked" FontSize="Micro"
                                        WidthRequest="115" HeightRequest="115"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button x:Name="ToggleViewButton" Text="Show All Products" Clicked="OnToggleViewButtonClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>