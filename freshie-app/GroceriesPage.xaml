<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="freshie_app.GroceriesPage"
             Title="GroceriesPage">
    <Grid VerticalOptions="FillAndExpand" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="0">
            <StackLayout>
                <Label x:Name="WelcomeLabel" 
                    TextColor="#F7F2E7"
                    HorizontalTextAlignment = "Center"
                    VerticalTextAlignment = "Center"
                    FontSize="11"/>
                <CollectionView x:Name="ProductsCollectionView" ItemsLayout="VerticalGrid, 3">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Spacing="2">
                                <Button Text="{Binding ProductName}" 
                                        Clicked="OnAddToGroceriesButtonClicked" 
                                        FontSize="Micro"
                                        LineBreakMode="WordWrap"
                                        WidthRequest="110" 
                                        HeightRequest="110">
                                    <Button.Triggers>
                                        <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                            <Setter Property="BackgroundColor" Value="#80FFFFFF"/>
                                        </Trigger>
                                    </Button.Triggers>
                                </Button>

                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
        
        <Button x:Name="ToggleViewButton" 
                Text="Show All Products" 
                Clicked="OnToggleViewButtonClicked"
                Margin="30,5,30,30"
                Grid.Row="1"/>
    </Grid>
</ContentPage>