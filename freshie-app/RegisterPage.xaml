<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="freshie_app.RegisterPage">
    
    <ScrollView>
        <VerticalStackLayout>
            <Label 
                Text="Your name:"
                VerticalOptions="Center"
                Margin="10,45,10,0"/>
            
            <Entry x:Name="Name" 
                    Placeholder="Name" 
                    Margin="10,5,10,5"/>
            <Label 
                Text="Your e-mail:"
                VerticalOptions="Center"
                Margin="10,0,10,0"/>
            
            <Entry x:Name="Email" 
                Placeholder="E-mail" 
                Margin="10,5,10,5"/>

            <Label 
                Text="Enter password:"
                VerticalOptions="Center"
                Margin="10,0,10,0"/>

            <Entry x:Name="Password" 
                Placeholder="Password" 
                IsPassword="true"
                Margin="10,5,10,5"/>

            <Label 
                 Text="Enter password again:"
                 VerticalOptions="Center"
                 Margin="10,0,10,0"/>

            <Entry x:Name="Password2" 
                Placeholder="Password" 
                IsPassword="true"
                Margin="10,5,10,5"/>
            
            <HorizontalStackLayout Margin="10,5,10,5">
                <CheckBox x:Name="PrivacyPolicy" IsChecked="false"/>
                <Label Text="I agree to Terms of Use." VerticalOptions="Center"/>
            </HorizontalStackLayout>
            
            <Label
                x:Name="PasswordCheck"
                Text="-Password must be: at least 8 characters, at least one capital letter, at least one number"
                VerticalOptions="Center"
                Margin="10,0,10,0"
                IsVisible="False"
                TextColor="#AF7070"/>
            <Label
                x:Name="EmailCheckDB"
                Text="-Account with this email already exists."
                VerticalOptions="Center"
                Margin="10,0,10,0"
                IsVisible="False"
                TextColor="#AF7070"/>
            <Label
                x:Name="EmailWrongFormat"
                Text="-Email is in the wrong format."
                VerticalOptions="Center"
                Margin="10,0,10,0"
                IsVisible="False"
                TextColor="#AF7070"/>
            <Label
                x:Name="TermsOfUse"
                Text="-Agree to Terms of Use."
                VerticalOptions="Center"
                Margin="10,0,10,0"
                IsVisible="False"
                TextColor="#AF7070"/>
            <Label
                x:Name="EmptyField"
                Text="-Make sure you filled out all the information."
                VerticalOptions="Center"
                Margin="10,0,10,0"
                IsVisible="False"
                TextColor="#AF7070"/>
            <Label
                x:Name="UnmatchingPasswords"
                Text="-Passwords don't match."
                VerticalOptions="Center"
                Margin="10,0,10,0"
                IsVisible="False"
                TextColor="#AF7070"/>

            <Button Text="Sign up" 
                Clicked="SignUpButtonClicked"
                Margin="20,5"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>