<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="freshie_app.HomePage">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label x:Name="WelcomeLabel" />
        <ListView x:Name="UserProductsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="ShowAllProductsButton" Text="Add Products" Clicked="OnShowAllProductsButtonClicked" />
        <ListView x:Name="AllProductsListView" IsVisible="False" ItemTapped="OnProductTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
